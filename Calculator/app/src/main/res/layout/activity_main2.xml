<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvExpression2"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/numberButton"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvResult2"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/numberButton"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRad"
                style="@style/ActionButtonStyle"
                android:text="TORadian" />

            <TextView
                android:id="@+id/tvDegree"
                style="@style/ActionButtonStyle"
                android:text="TODegree" />

            <TextView
                android:id="@+id/tvPercent"
                style="@style/ActionButtonStyle"
                android:text="%" />

            <TextView
                android:id="@+id/tvVersion"
                style="@style/ActionButtonStyle"
                android:text="Version1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSin"
                style="@style/NumberButtonStyle"
                android:text="sin" />

            <TextView
                android:id="@+id/tvln"
                style="@style/NumberButtonStyle"
                android:text="ln" />

            <TextView
                android:id="@+id/tvc"
                style="@style/NumberButtonStyle"
                android:text="c" />

            <TextView
                android:id="@+id/tvneg"
                style="@style/NumberButtonStyle"
                android:text="+/-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvcos"
                style="@style/NumberButtonStyle"
                android:text="cos" />

            <TextView
                android:id="@+id/tvlog"
                style="@style/NumberButtonStyle"
                android:text="log" />

            <TextView
                android:id="@+id/tvmc"
                style="@style/NumberButtonStyle"
                android:text="MC" />

            <TextView
                android:id="@+id/tvdervi"
                style="@style/NumberButtonStyle"
                android:text="dy/dx" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvtan"
                style="@style/NumberButtonStyle"
                android:text="tan" />

            <TextView
                android:id="@+id/tve"
                style="@style/NumberButtonStyle"
                android:text="e" />

            <TextView
                android:id="@+id/tvMR"
                style="@style/NumberButtonStyle"
                android:text="MR" />

            <TextView
                android:id="@+id/tvMnegative"
                style="@style/NumberButtonStyle"
                android:text="M-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvpower"
                style="@style/NumberButtonStyle"
                android:text="X^" />

            <TextView
                android:id="@+id/tvfactor"
                style="@style/NumberButtonStyle"
                android:text="n!" />

            <TextView
                android:id="@+id/tvsqrt"
                style="@style/NumberButtonStyle"
                android:text="@string/square_root_symbol" />

            <TextView
                android:id="@+id/tvMpositive"
                style="@style/NumberButtonStyle"
                android:text="M+" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>